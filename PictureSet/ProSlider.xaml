<UserControl x:Class="PictureSet.ProSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PictureSet"
             mc:Ignorable="d" 
             d:DesignHeight="25" Width="256">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Label_Title" Content="Label" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0,0,0,0"/>
        <Slider x:Name="Slider_Value" Value="0" Grid.Column="1" Margin="0,0,0,0" ValueChanged="Slider_Value_ValueChanged"/>
        <TextBox x:Name="TextBox_Value" Text="0" Grid.Column="2" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0,0,0,0" LostKeyboardFocus="TextBox_Value_LostKeyboardFocus"/>
    </Grid>
</UserControl>
