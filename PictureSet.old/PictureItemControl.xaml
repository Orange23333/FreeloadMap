<UserControl x:Class="PictureSet.PictureItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PictureSet"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid Focusable="True" GotFocus="Grid_GotFocus" LostFocus="Grid_LostFocus">
        <Image x:Name="image" Stretch="Fill"/>
        <Button x:Name="button_MovePicture" Content="+"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,0" Width="16" Height="16" Visibility="Hidden" MouseLeftButtonDown="button_MovePicture_MouseLeftButtonDown" MouseLeftButtonUp="button_MovePicture_MouseLeftButtonUp"/>
        <Button x:Name="button_DeletePicture" Content="X"  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,0,0" Width="16" Height="16" Visibility="Hidden"/>
    </Grid>
</UserControl>
